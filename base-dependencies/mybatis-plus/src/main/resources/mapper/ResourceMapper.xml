<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zm.plus.web.mapper.ResourceMapper">
    <insert id="add"
            useGeneratedKeys="true"
            keyProperty="web_id"
            parameterType="cn.zm.plus.web.entity.Resource">
        insert into resource(
                id,
                resourceName,
                apiUrl
        )values(
                #{id},
                #{resourceName},
                #{apiUrl}
        )
    </insert>

    <select id="get"
            parameterType="cn.zm.plus.web.entity.Resource"
            resultType="cn.zm.plus.web.entity.Resource">
        select
            v.id,
            v.resourceName,
            v.apiUrl
        from
        resource v
        where
        1 = 1
            <if test="id != null and id != ''"> and v.id
                = #{id}</if>
            <if test="resourceName != null and resourceName != ''"> and v.resourceName
                = #{resourceName}</if>
            <if test="apiUrl != null and apiUrl != ''"> and v.apiUrl
                = #{apiUrl}</if>
    </select>

    <select id="getById"
            parameterType="cn.zm.plus.web.entity.Resource"
            resultType="cn.zm.plus.web.entity.Resource">
        select
            v.id,
            v.resourceName,
            v.apiUrl
        from
        resource v
        where
        1 = 1
        and v.web_id = #{web_id}
        limit 1
    </select>

    <update id="update"
            parameterType="cn.zm.plus.web.entity.Resource">
        update resource v
        set v.web_id = #{web_id}
                <if test="id != null and id != ''"> , v.id
                    = #{id}</if>
                <if test="resourceName != null and resourceName != ''"> , v.resourceName
                    = #{resourceName}</if>
                <if test="apiUrl != null and apiUrl != ''"> , v.apiUrl
                    = #{apiUrl}</if>
        where v.web_id = #{web_id}
    </update>

    <delete id="del"
            parameterType="java.lang.String">
        delete from resource
        where web_id = #{web_id}
    </delete>
</mapper>
