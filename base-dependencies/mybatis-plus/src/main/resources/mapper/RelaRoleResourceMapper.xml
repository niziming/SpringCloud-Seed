<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zm.web.mapper.RelaRoleResourceMapper">
    <insert id="add"
            useGeneratedKeys="true"
            keyProperty="web_id"
            parameterType="cn.zm.web.entity.RelaRoleResource">
        insert into rela_role_resource(
                id,
                roleId,
                resourceId
        )values(
                #{id},
                #{roleId},
                #{resourceId}
        )
    </insert>

    <select id="get"
            parameterType="cn.zm.web.entity.RelaRoleResource"
            resultType="cn.zm.web.entity.RelaRoleResource">
        select
            v.id,
            v.roleId,
            v.resourceId
        from
        rela_role_resource v
        where
        1 = 1
            <if test="id != null and id != ''"> and v.id
                = #{id}</if>
            <if test="roleId != null and roleId != ''"> and v.roleId
                = #{roleId}</if>
            <if test="resourceId != null and resourceId != ''"> and v.resourceId
                = #{resourceId}</if>
    </select>

    <select id="getById"
            parameterType="cn.zm.web.entity.RelaRoleResource"
            resultType="cn.zm.web.entity.RelaRoleResource">
        select
            v.id,
            v.roleId,
            v.resourceId
        from
        rela_role_resource v
        where
        1 = 1
        and v.web_id = #{web_id}
        limit 1
    </select>

    <update id="update"
            parameterType="cn.zm.web.entity.RelaRoleResource">
        update rela_role_resource v
        set v.web_id = #{web_id}
                <if test="id != null and id != ''"> , v.id
                    = #{id}</if>
                <if test="roleId != null and roleId != ''"> , v.roleId
                    = #{roleId}</if>
                <if test="resourceId != null and resourceId != ''"> , v.resourceId
                    = #{resourceId}</if>
        where v.web_id = #{web_id}
    </update>

    <delete id="del"
            parameterType="java.lang.String">
        delete from rela_role_resource
        where web_id = #{web_id}
    </delete>
</mapper>
